extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                #user
                    div.signup-wall.page-title
                        h1 Welcome #{user.firstName}.
                        h2 Check your details below:
                    div.signup-wall.login-title
                        ul.user-details
                            li Username ---> #{user.username}
                            li Email    ---> #{user.email}
                            li First Name ---> #{user.firstName}
                            li Last Name ---> #{user.lastName}
                    div.signup-wall
                        a(href='/applications', class='text-center new-account') Your Applications
                        a(href='/signout', class='text-center new-account') Sign Out

